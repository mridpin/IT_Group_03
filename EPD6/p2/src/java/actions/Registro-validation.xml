<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
    <field name="nombre">
        <field-validator type="requiredstring">
            <message key="nombre.required"/>
        </field-validator>
    </field>
    <field name="apellidos">
        <field-validator type="requiredstring">
            <message key="apellidos.required"/>
        </field-validator>
    </field>
    <field name="dni">
        <field-validator type="requiredstring">
            <message key="dni.required"/>
        </field-validator>
        <field-validator type="stringlength">
             <param name="minLength">9</param>
             <param name="maxLength">9</param>
             <param name="trim">true</param>
             <message key="dni.fail"/>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <message key="email.required"/>
        </field-validator>
        <field-validator type="email">
         <message key="email.fail"/>
        </field-validator>
    </field>
    <field name="edad">
         <field-validator type="int">
             <param name="min">14</param>
             <param name="max">70</param>
             <message key="edad.required"/>
         </field-validator>
     </field>

    <field name="peso">
         <field-validator type="double">
             <param name="minInclusive">35</param>
             <param name="maxInclusive">200</param>
             <message key="peso.required"/>
         </field-validator>
     </field>

    <field name="altura">
         <field-validator type="int">
             <param name="min">120</param>
             <param name="max">270</param>
             <message key="altura.required"/>
         </field-validator>
     </field>
    
    <field name="contrasenia">
        <field-validator type="requiredstring">
            <message key="contrasenia.required"/>
        </field-validator>
    </field>
  

    
    
    
    
    
